  :interconnect.vh (string+ *prjroot*"/inc/interconnect.vh") 
  :pannel.h (string+ *prjroot*"/bus/include/pannel.h") 
  :pannel-in-bus-list '("dev0")
  :first-ram "data0_ram1_"
  :last-ram "data0_ram1_"
  :bus.ld (string+ *prjroot*"/bus/script/bus.ld")
  :bus.h (string+ *prjroot*"/bus/include/bus.h")
